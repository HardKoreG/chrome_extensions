{ "manifest_version"        : 2
, "minimum_chrome_version"  : "28.0"

, "browser_specific_settings" : { "gecko":{ "id"                 : "meta-refresh-killer@eladkarako.com"
                                          , "strict_min_version" : "57.0"
                                          }
                                }

, "default_locale"          : "en_US"
, "name"                    : "__MSG_name_long__"
, "short_name"              : "__MSG_name_shrt__"
, "description"             : "__MSG_name_desc__"

, "version"                 : "3.1.1.10"
, "homepage_url"            : "https://github.com/eladkarako/chrome_extensions/tree/master/Meta-Refresh-Killer"
, "author"                  : "Elad Karako"

, "offline_enabled"         : true

, "permissions"             : [ "http://*/*"
                              , "https://*/*"
                              ]
, "background"              : { "scripts":    [ "resources/background_main.js"
                                              ]
                              , "persistent": false 
                              }
, "content_scripts"         : [ {"js":  [ "resources/at_document_end.js"    ], "all_frames": true, "match_about_blank": true, "matches": [ "http://*/*","https://*/*" ], "run_at": "document_end"   }
                              ]
,"web_accessible_resources" : [ "resources/*.*"]
,"icons"                    : { "512": "resources/icon.png" }
,"browser_action"           : {
                              }
}
